{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "System": "Warning",
      "RemoteDesktopServer": "Information"
    },
    "EventLog": {
      "LogLevel": {
        "Default": "Warning"
      },
      "SourceName": "RemoteDesktopServer-Production"
    }
  },
  "ServerSettings": {
    "ServerName": "RDP-PROD-SERVER",
    "MaxConcurrentSessions": 100,
    "SessionTimeoutMinutes": 240,
    "EnableSessionRecording": false
  },
  "Security": {
    "RequireNLA": true,
    "RequireSecureRPC": true,
    "EnableAuditLogging": true,
    "FailedLoginAttempts": 3,
    "LockoutDurationMinutes": 30,
    "PasswordComplexity": true
  },
  "Performance": {
    "MonitoringInterval": 10000,
    "PerformanceCountersEnabled": true,
    "MaxCpuUsage": 80.0,
    "MaxMemoryUsage": 85.0,
    "AlertThresholds": {
      "CpuCritical": 90.0,
      "MemoryCritical": 90.0,
      "DiskCritical": 95.0
    }
  },
  "API": {
    "Enabled": true,
    "Port": 8443,
    "UseHttps": true,
    "JwtExpirationHours": 8,
    "RateLimiting": {
      "RequestsPerMinute": 60,
      "BurstSize": 5
    }
  },
  "Backup": {
    "Enabled": true,
    "RetentionDays": 90,
    "BackupInterval": "Daily",
    "BackupTime": "03:00:00"
  }
}
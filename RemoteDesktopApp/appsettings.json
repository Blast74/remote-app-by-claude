{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=remotedesktop.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "ApplicationSettings": {
    "DatabasePath": "remotedesktop.db",
    "LogsPath": "logs",
    "BackupPath": "backups",
    "MaxConcurrentSessions": 10,
    "SessionTimeout": 30,
    "AutoReconnectAttempts": 5,
    "AutoReconnectDelay": 5000
  },
  "Security": {
    "EncryptionKey": "RemoteDesktopApp2024SecureKey123!",
    "TokenExpiration": 3600,
    "RequireTwoFactor": true,
    "MaxFailedAttempts": 3,
    "LockoutDuration": 900
  },
  "RDP": {
    "DefaultPort": 3389,
    "CompressionEnabled": true,
    "AudioRedirection": true,
    "PrinterRedirection": true,
    "DriveRedirection": false,
    "ClipboardRedirection": true,
    "ColorDepth": 32,
    "DesktopWidth": 1920,
    "DesktopHeight": 1080,
    "ConnectToConsole": false,
    "EnableCredSSP": true
  },
  "UI": {
    "DefaultTheme": "Dark",
    "SidePanelWidth": 300,
    "HeaderBarHeight": 60,
    "StatusBarHeight": 30,
    "TabHeight": 35,
    "AnimationDuration": 300,
    "AutoSaveInterval": 30000
  },
  "Performance": {
    "MonitoringInterval": 1000,
    "MaxLogEntries": 10000,
    "CacheSize": 100,
    "GCCollectionInterval": 60000
  }
}
<UserControl x:Class="RemoteDesktopApp.Views.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="30"
             Background="{DynamicResource MaterialDesignChipBackground}">
    
    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
            BorderThickness="0,1,0,0">
        <Grid Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Status Message -->
            <TextBlock 
                Grid.Column="0"
                Text="{Binding StatusMessage}"
                Style="{StaticResource MaterialDesignCaptionTextBlock}"
                VerticalAlignment="Center"/>
            
            <!-- Connection Info -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       Margin="20,0,0,0"
                       VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Connection" 
                    Width="14" 
                    Height="14" 
                    Margin="0,0,5,0"/>
                <TextBlock 
                    Text="{Binding ActiveSessionsCount, StringFormat=\{0\} sessions}"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
            </StackPanel>
            
            <!-- Performance Info -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       Margin="20,0,0,0"
                       VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="ChartLine" 
                    Width="14" 
                    Height="14" 
                    Margin="0,0,5,0"/>
                <TextBlock 
                    Text="{Binding CpuUsage, StringFormat=CPU: \{0:F1\}%}"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Margin="0,0,10,0"/>
                <TextBlock 
                    Text="{Binding MemoryUsage, StringFormat=RAM: \{0:F1\}%}"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
            </StackPanel>
            
            <!-- Network Info -->
            <StackPanel Grid.Column="3" 
                       Orientation="Horizontal" 
                       Margin="20,0,0,0"
                       VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Network" 
                    Width="14" 
                    Height="14" 
                    Margin="0,0,5,0"/>
                <TextBlock 
                    Text="{Binding NetworkLatency, StringFormat=Latency: \{0\}ms}"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
            </StackPanel>
            
            <!-- Time -->
            <StackPanel Grid.Column="4" 
                       Orientation="Horizontal" 
                       Margin="20,0,0,0"
                       VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Clock" 
                    Width="14" 
                    Height="14" 
                    Margin="0,0,5,0"/>
                <TextBlock 
                    Text="{Binding CurrentTime, StringFormat=HH:mm:ss}"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>